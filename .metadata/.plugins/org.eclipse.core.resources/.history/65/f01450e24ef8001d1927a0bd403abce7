		System.out.println();
		for(int i=0; i<a.length; i++) {
			
			for (int j = 0; j < i+1; j++) {
				a[i][j] = '*';
				System.out.print(a[i][j] +" ");
			}
			System.out.println();
		}
		
		
		/*
			* * * * * 
			* * * * 
